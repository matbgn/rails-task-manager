<h1>My tasks</h1>
<div class="container">

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if !task[:completed] %>
        <i class="far fa-square"></i>
      <% else %>
        <i class="far fa-check-square"></i>
      <% end %>
      <%= link_to task[:title], task_path(task[:id]) %> 
      <%= link_to task_path(task[:id]),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<hr>

<p><i class="fas fa-plus"></i> <%= link_to "Add a new task", new_path %></p>
</div>