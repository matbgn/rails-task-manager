<h1>New task</h1>
<div class="container">

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<hr>

<p><i class="fas fa-undo"></i> <%= link_to "Back to list", tasks_path %></p>
</div>